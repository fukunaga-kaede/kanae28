<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".calenderActivity">
    <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
    <!--xmlns:tools="http://schemas.android.com/tools"-->
    <!--android:id="@+id/ConstraintLayout"-->

    <ImageView
        android:id="@+id/room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/room1" />


    <!--吹き出し-->

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="370dp"
        android:layout_height="230dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="#33000000"
        android:selectedDateVerticalBar="@color/colorPrimaryDark"
        android:selectedWeekBackgroundColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/plus"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="#33000000"
        android:text="+"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/calendar"
        app:layout_constraintTop_toBottomOf="@+id/calendar" />

    <!--台詞-->

    <ImageView
        android:id="@+id/shitsuji1"
        android:layout_width="369dp"
        android:layout_height="176dp"
        android:layout_marginStart="428dp"
        android:layout_marginTop="216dp"
        app:layout_constraintStart_toStartOf="@+id/room"
        app:layout_constraintTop_toTopOf="@+id/room"
        app:srcCompat="@drawable/shitsuji" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="215dp"
        android:layout_height="105dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/fukidashi" />

    <TextView
        android:id="@+id/message"
        android:layout_width="130dp"
        android:layout_height="44dp"
        android:text=""
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.491" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="300dp"
        android:layout_height="230dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@id/calendar"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:text="10:00"
                app:layout_constraintStart_toStartOf="@+id/scrollView"
                app:layout_constraintTop_toTopOf="@+id/scrollView" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="バイト"
                app:layout_constraintStart_toStartOf="@+id/TextView1"
                app:layout_constraintTop_toTopOf="@+id/textView1" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>