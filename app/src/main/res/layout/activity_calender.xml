<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".calenderActivity">

    <ImageView
        android:id="@+id/room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/room1" />

    <ImageButton
        android:id="@+id/plus"
        android:layout_width="55dp"
        android:layout_height="52dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="10dp"
        android:background="#80D69DC8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:srcCompat="@drawable/plus" />

    <Button
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="260dp" />

    <CalendarView
        android:id="@+id/container"
        android:layout_width="363dp"
        android:layout_height="234dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#33000000"
        android:selectedWeekBackgroundColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/room" />


    <!--吹き出し-->

    <ImageView
        android:id="@+id/shitsuji1"
        android:layout_width="369dp"
        android:layout_height="176dp"
        android:layout_marginStart="428dp"
        android:layout_marginTop="216dp"
        app:layout_constraintStart_toStartOf="@+id/room"
        app:layout_constraintTop_toTopOf="@+id/room"
        app:srcCompat="@drawable/shitsuji" />

    <!--台詞-->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="215dp"
        android:layout_height="105dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/fukidashi" />

    <TextView
        android:id="@+id/message"
        android:layout_width="130dp"
        android:layout_height="44dp"
        android:text="9月27日の\n予定でございます。"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.491" />


</androidx.constraintlayout.widget.ConstraintLayout>